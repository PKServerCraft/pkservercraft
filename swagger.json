{
    "swagger": "2.0",
    "info": {
        "title": "PK Server Craft",
        "description": "A simple server management console using Digital Ocean specific designed for short-run servers. The intent is to define server patterns that can be deployed through saved images (for short-run, persistant servers) or through rolling server deployments.",
        "version": "1.0.0"
    },
    "host": "www-dev.paulkimbrel.com",
    "schemes": [
        "http",
        "https"
    ],
    "basePath": "/pkservercraft/api/v1",
    "produces": [
        "application/json"
    ],
    "paths": {
        "/deployables": {
            "get": {
                "summary": "List the deployables available for this configuration",
                "tags": [
                    "Deployables"
                ],
                "responses": {
                    "200": {
                        "description": "A list of deployable images available for this configuration",
                        "schema": {
                            "type": "array",
                            "items": {
                                "$ref": "#/definitions/Deployable"
                            }
                        }
                    },
                    "default": {
                        "description": "Unexpected error",
                        "schema": {
                            "$ref": "#/definitions/Error"
                        }
                    }
                }
            }
        },
        "/deployables/{slug}/{version}": {
            "delete": {
                "summary": "Deletes a specific version of a deployable",
                "tags": [
                    "Deployables"
                ],
                "parameters": [
                    {
                        "in": "path",
                        "name": "slug",
                        "description": "Slug of deployable to be destroyed",
                        "required": true,
                        "type": "string"
                    },
                    {
                        "in": "path",
                        "name": "version",
                        "description": "Version of deployable to be destroyed",
                        "required": true,
                        "type": "string"
                    }
                ],
                "responses": {
                    "202": {
                        "description": "Destruction in progress",
                        "schema": {
                            "$ref": "#/definitions/Status"
                        }
                    },
                    "204": {
                        "description": "Version no longer exists"
                    },
                    "default": {
                        "description": "Unexpected error",
                        "schema": {
                            "$ref": "#/definitions/Error"
                        }
                    }
                }
            }
        },
        "/servers": {
            "get": {
                "summary": "List the servers available for this configuration",
                "tags": [
                    "Servers"
                ],
                "responses": {
                    "200": {
                        "description": "An list of servers",
                        "schema": {
                            "type": "array",
                            "items": {
                                "$ref": "#/definitions/Server"
                            }
                        }
                    },
                    "default": {
                        "description": "Unexpected error",
                        "schema": {
                            "$ref": "#/definitions/Error"
                        }
                    }
                },
                "security": [
                    {
                        "sp_auth": []
                    }
                ]
            },
            "post": {
                "summary": "Add a new server to this configuration",
                "tags": [
                    "Servers"
                ],
                "responses": {
                    "200": {
                        "description": "Configuration updated"
                    }
                }
            },
            "put": {
                "summary": "Updates a server to this configuration",
                "tags": [
                    "Servers"
                ],
                "responses": {
                    "200": {
                        "description": "Configuration updated"
                    }
                }
            }
        },
        "/servers/{slug}": {
            "get": {
                "summary": "List a server available in this configuration",
                "tags": [
                    "Servers"
                ],
                "parameters": [
                    {
                        "in": "path",
                        "name": "slug",
                        "description": "Slug of server to be returned",
                        "required": true,
                        "type": "string"
                    }
                ],
                "responses": {
                    "200": {
                        "description": "Servers by slug",
                        "schema": {
                            "$ref": "#/definitions/Server"
                        }
                    },
                    "404": {
                        "description": "Server not found"
                    },
                    "default": {
                        "description": "Unexpected error",
                        "schema": {
                            "$ref": "#/definitions/Error"
                        }
                    }
                }
            },
            "post": {
                "summary": "Activate a server available in this configuration with a given image or deployment.  If a deployment ID is supplied, a new server will be created and old server removed.  Otherwise, an preconfigured image prefix will be used to build the server.",
                "tags": [
                    "Servers"
                ],
                "parameters": [
                    {
                        "in": "path",
                        "name": "slug",
                        "description": "Slug of server to be returned",
                        "required": true,
                        "type": "string"
                    },
                    {
                        "in": "query",
                        "name": "deployment-id",
                        "description": "Identifier to be used with deployment system for the deployment artifact.",
                        "required": false,
                        "type": "string"
                    }
                ],
                "responses": {
                    "200": {
                        "description": "Server is active"
                    },
                    "202": {
                        "description": "Server creation in progress",
                        "schema": {
                            "$ref": "#/definitions/Status"
                        }
                    },
                    "404": {
                        "description": "Server configuration not found"
                    },
                    "default": {
                        "description": "Unexpected error",
                        "schema": {
                            "$ref": "#/definitions/Error"
                        }
                    }
                }
            },
            "delete": {
                "summary": "Servers",
                "description": "Destroy an active server if available in this configuration",
                "tags": [
                    "Servers"
                ],
                "parameters": [
                    {
                        "in": "path",
                        "name": "slug",
                        "description": "Slug of server to be destroyed",
                        "required": true,
                        "type": "string"
                    }
                ],
                "responses": {
                    "202": {
                        "description": "Destruction in progress",
                        "schema": {
                            "$ref": "#/definitions/Status"
                        }
                    },
                    "204": {
                        "description": "Server no longer active"
                    },
                    "default": {
                        "description": "Unexpected error",
                        "schema": {
                            "$ref": "#/definitions/Error"
                        }
                    }
                }
            }
        }
    },
    "definitions": {
        "Status": {
            "properties": {
                "status": {
                    "type": "string"
                }
            }
        },
        "Deployable": {
            "properties": {
                "slug": {
                    "type": "string"
                },
                "versions": {
                    "type": "array",
                    "items": {
                        "$ref": "#/definitions/DeployableVersion"
                    }
                }
            }
        },
        "DeployableVersion": {
            "properties": {
                "version": {
                    "type": "string"
                },
                "files": {
                    "type": "array",
                    "items": {
                        "item": "string"
                    }
                }
            }
        },
        "Server": {
            "properties": {
                "slug": {
                    "type": "string"
                },
                "image": {
                    "$ref": "#/definitions/Image"
                },
                "droplet": {
                    "$ref": "#/definitions/Droplet"
                },
                "dns": {
                    "type": "string"
                }
            }
        },
        "Image": {
            "properties": {
                "id": {
                    "type": "string"
                },
                "name": {
                    "type": "string"
                },
                "date": {
                    "type": "string"
                }
            }
        },
        "Droplet": {
            "properties": {
                "id": {
                    "type": "string"
                },
                "status": {
                    "type": "string"
                },
                "ip_address": {
                    "type": "string"
                }
            }
        },
        "Error": {
            "properties": {
                "type": {
                    "type": "string"
                },
                "message": {
                    "type": "string"
                }
            }
        }
    },
    "securityDefinitions": {
        "sp_auth": {
            "type": "basic"
        }
    }
}